<script>
$(document).ready(function() {
    // Handle adding new fields to payment steps
    $('.add-field-btn').on('click', function() {
        const stepElement = $(this).closest('.payment-step');
        const stepIndex = stepElement.data('step') - 1;
        const fieldCount = stepElement.find('.fields-container .mb-3').length + 1;
        const newFieldHtml = `
            <div class="mb-3">
                <label class="form-label">Field ${fieldCount}</label>
                <input type="text" class="form-control" name="payments[${stepIndex}][fields][]" required>
            </div>`;
        stepElement.find('.fields-container').append(newFieldHtml);
    });

    // Handle form submission with AJAX
    $('#createPaymentsForm').on('submit', function(event) {
        event.preventDefault();

        const paymentId = $('#paymentId').val();
        let payments = [];
        $('.payment-step').each(function() {
            let stepNumber = $(this).data('step');
            let fields = $(this).find('.fields-container input').map(function() {
                return $(this).val();
            }).get();

            payments.push({
                step: stepNumber,
                fields: fields
            });
        });

        const url = paymentId ? `/edit-payment/${paymentId}` : '/create-payments';
        const method = paymentId ? 'PUT' : 'POST';

        $.ajax({
            type: method,
            url: url,
            contentType: 'application/json',
            data: JSON.stringify({ payments: payments }),
            success: function(response) {
                if (response.success) {
                    Swal.fire('Success', 'Payments saved successfully', 'success');
                    loadPayments();
                } else {
                    Swal.fire('Error', 'Failed to save payments', 'error');
                }
            },
            error: function() {
                Swal.fire('Error', 'An error occurred while saving payments', 'error');
            }
        });
    });

    function loadPayments() {
        $.ajax({
            type: 'GET',
            url: '/payments',
            success: function(response) {
                if (response.success) {
                    let paymentsList = response.payments.map((paymentDoc, index) => {
                        return paymentDoc.payments.map((payment, stepIndex) => `
                            <tr>
                                <td>${index + 1}.${stepIndex + 1}</td>
                                <td>Payment Step ${payment.step}</td>
                                <td>${payment.fields.map(field => `<div>${field}</div>`).join('')}</td>
                                <td><button class="btn btn-warning edit-payment" data-id="${paymentDoc._id}" data-step="${payment.step}">Edit</button></td>
                                <td><button class="btn btn-danger delete-payment" data-id="${paymentDoc._id}" data-step="${payment.step}">Delete</button></td>
                            </tr>
                        `).join('');
                    }).join('');
                    $('tbody').html(paymentsList);
                } else {
                    Swal.fire('Error', 'Failed to load payments', 'error');
                }
            },
            error: function() {
                Swal.fire('Error', 'An error occurred while fetching payments', 'error');
            }
        });
    }

    // Load payments on page load
    loadPayments();

    // Delete payment
    $(document).on('click', '.delete-payment', function() {
        let paymentId = $(this).data('id');
        $.ajax({
            type: 'DELETE',
            url: `/delete-payment/${paymentId}`,
            success: function(response) {
                if (response.success) {
                    Swal.fire('Success', 'Payment deleted successfully', 'success');
                    loadPayments();
                } else {
                    Swal.fire('Error', 'Failed to delete payment', 'error');
                }
            },
            error: function() {
                Swal.fire('Error', 'An error occurred while deleting the payment', 'error');
            }
        });
    });

    // Edit payment
    $(document).on('click', '.edit-payment', function() {
        let paymentId = $(this).data('id');
        $.ajax({
            type: 'GET',
            url: `/get-payment/${paymentId}`,
            success: function(response) {
                if (response.success) {
                    const paymentDoc = response.payment;
                    $('#paymentId').val(paymentDoc._id);

                    $('.payment-step').each(function() {
                        const stepNumber = $(this).data('step');
                        const stepData = paymentDoc.payments.find(p => p.step === stepNumber);
                        const fieldsContainer = $(this).find('.fields-container');
                        fieldsContainer.empty();

                        if (stepData) {
                            stepData.fields.forEach((field, index) => {
                                const fieldHtml = `
                                    <div class="mb-3">
                                        <label class="form-label">Field ${index + 1}</label>
                                        <input type="text" class="form-control" name="payments[${stepNumber - 1}][fields][]" value="${field}" required>
                                    </div>`;
                                fieldsContainer.append(fieldHtml);
                            });
                        }
                    });
                } else {
                    Swal.fire('Error', 'Failed to load payment details', 'error');
                }
            },
            error: function() {
                Swal.fire('Error', 'An error occurred while fetching payment details', 'error');
            }
        });
    });
});
</script>

