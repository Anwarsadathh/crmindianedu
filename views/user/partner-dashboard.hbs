    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #000;
            color: #fff;
            overflow-x: hidden;
            margin: 0;
            padding: 0;
        }

        .extreme-section {
            padding: 100px 20px;
            background: linear-gradient(135deg, #232f65 0%, #3b4a99 100%);
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.8);
            overflow: hidden;
            position: relative;
            z-index: 1;
        }

        .extreme-section::before {
            content: '';
            position: absolute;
            width: 400%;
            height: 400%;
            background: conic-gradient(from 180deg at 50% 50%, #ff0066, #6600ff, #ff0066, #6600ff);
            z-index: -1;
            animation: rotate 10s linear infinite;
            top: -150%;
            left: -150%;
            opacity: 0.2;
        }

        @keyframes rotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .extreme-container {
            max-width: 1200px;
            margin: 0 auto;
            text-align: center;
        }

        .extreme-heading h2 {
            font-size: 3rem;
            margin-bottom: 50px;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 2px;
            animation: glow 1s ease-in-out infinite alternate;
        }

        @keyframes glow {
            from { text-shadow: 0 0 10px #ff00ff, 0 0 20px #ff00ff, 0 0 30px #ff00ff, 0 0 40px #ff00ff; }
            to { text-shadow: 0 0 20px #ff66ff, 0 0 30px #ff66ff, 0 0 40px #ff66ff, 0 0 50px #ff66ff; }
        }

        .extreme-day-learn {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .extreme-day-wrap {
            width: 30%;
            background: #111;
            border-radius: 15px;
            margin-bottom: 40px;
            padding: 20px;
            transform: scale(1);
            transition: transform 0.4s ease, box-shadow 0.4s ease;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
            position: relative;
            overflow: hidden;
        }

        .extreme-day-wrap:hover {
            transform: scale(1.1);
            box-shadow: 0 0 40px rgba(255, 0, 255, 0.8);
        }

        .extreme-day-title {
            font-size: 1.8rem;
            font-weight: bold;
            color: #ff00ff;
            margin-bottom: 15px;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .extreme-day-content h3 {
            font-size: 1.5rem;
            margin-bottom: 15px;
            color: #ff66ff;
        }

        .extreme-list {
            list-style: none;
            padding-left: 0;
        }

        .extreme-list li {
            margin-bottom: 10px;
            color: #fff;
        }

        .extreme-detail {
            display: flex;
            align-items: center;
            margin-top: 20px;
        }

        .extreme-icon {
            width: 50px;
            height: 50px;
            margin-right: 20px;
            filter: drop-shadow(0 0 10px #ff00ff);
        }

        .extreme-detail p {
            font-size: 1.2rem;
            color: #ff66ff;
        }

        @media only screen and (max-width: 767px) {
            .extreme-day-wrap {
                width: 100%;
            }
        }
    </style>
</head>

