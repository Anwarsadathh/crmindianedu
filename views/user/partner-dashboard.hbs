   <script>
function handleReferralClick(studentId) {
    const url = `https://crm.indianeduhub.in/p-referral?studentid=${studentId}`;
    
    navigator.clipboard.writeText(url)
        .then(() => {
            Swal.fire({
                icon: 'success',
                title: 'Link Copied',
                text: 'The referral link has been copied to your clipboard.',
            }).then(() => {
                window.location.href = url; // Redirect after the success message
            });
        })
        .catch((error) => {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to copy the link. Please try again.',
            });
        });
}
</script>

<script>
 function uploadImage(event) {
  const file = event.target.files[0];
  if (file) {
    // Check if the file is a .jpg or .png
    if (file.type !== 'image/jpeg' && file.type !== 'image/png') {
      alert('Please upload a .jpg or .png file.');
      return;
    }

    const formData = new FormData();
    formData.append('profilePhoto', file);

    fetch('/upload-profile-photos', {
      method: 'POST',
      body: formData
    })
    .then(response => response.json())
    .then(result => {
      if (result.success) {
        document.getElementById('profilePhoto').src = result.imageUrl;
        alert(result.message);
      } else {
        alert(result.message);
      }
    })
    .catch(error => {
      console.error('Error uploading image:', error);
      alert('An error occurred while uploading the image.');
    });
  }
}

</script>

