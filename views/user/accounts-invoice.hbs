<script>
$(document).ready(function () {
  // Initialize the DataTable
  var table = $('#invoiceTable').DataTable();

  // Get query parameter for status filter if present
  const urlParams = new URLSearchParams(window.location.search);
  const statusFilter = urlParams.get('statusFilter');

  if (statusFilter) {
    $('#filter-status').val(statusFilter); // Set dropdown to current filter
    updateHeading(statusFilter); // Update the heading based on the filter
  }

  // Update the heading text based on the selected dropdown
  function updateHeading(filterValue) {
    var headingText = '';

    switch (filterValue) {
      case 'raised':
        headingText = 'Raised Invoice';
        break;
      case 'not-raised':
        headingText = 'Not Raised Invoice';
        break;
      case 'credited':
        headingText = 'Credited Invoice';
        break;
      case 'pending':
        headingText = 'Pending Invoice';
        break;
      default:
        headingText = 'All Invoices'; // Default heading when no filter is selected
        break;
    }

    $('#table-heading').text(headingText);
  }

  // Filter logic for status and update heading
  $('#filter-status').on('change', function () {
    var filterValue = $(this).val();

    updateHeading(filterValue); // Update heading based on the selected filter

    if (filterValue === 'raised') {
      table.column(12).search('Raised').draw();
    } else if (filterValue === 'not-raised') {
      table.column(12).search('Not Raised').draw();
    } else if (filterValue === 'credited') {
      table.column(13).search('Credited').draw();
    } else if (filterValue === 'pending') {
      table.column(13).search('Pending').draw();
    } else {
      table.search('').columns().search('').draw(); // Reset filter
    }

    // Redirect to the filtered route (preserve the filter in URL)
    var url = "/accounts-invoice";
    if (filterValue) {
      url += `?statusFilter=${filterValue}`;
    }
    window.location.href = url; // Redirect to apply filter server-side
  });
});

</script>
<script>
    document.getElementById('raise-invoice-btn').addEventListener('click', async function () {
  const selectedIndexes = [];

  document.querySelectorAll('.select-row').forEach((checkbox) => {
    if (checkbox.checked && !checkbox.disabled) {
      selectedIndexes.push(checkbox.dataset.index);
    }
  });

  if (selectedIndexes.length > 0) {
    try {
      const response = await fetch('/update-wallet-status-bulk-ac', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          indexes: selectedIndexes,
          isCredited: true
        })
      });

      if (response.ok) {
        // Update UI to reflect status change
        location.reload();
      } else {
        console.error('Failed to credit invoices');
      }
    } catch (error) {
      console.error('Error:', error);
    }
  } else {
    alert('Please select at least one entry to credit.');
  }
});


