<script>
  document.addEventListener('DOMContentLoaded', function () {
    const selectAllCheckbox = document.getElementById('select-all');
    const rowCheckboxes = document.querySelectorAll('.select-row');
    const raiseInvoiceBtn = document.getElementById('raise-invoice-btn');

    // Toggle all checkboxes when 'select-all' checkbox is clicked
    selectAllCheckbox.addEventListener('click', function () {
      rowCheckboxes.forEach((checkbox) => {
        if (!checkbox.disabled) {
          checkbox.checked = selectAllCheckbox.checked;
        }
      });
    });

    // Handle the 'Raise Invoice' button click
    raiseInvoiceBtn.addEventListener('click', async function () {
      const selectedIndexes = [];

      rowCheckboxes.forEach((checkbox) => {
        if (checkbox.checked && !checkbox.disabled) {
          selectedIndexes.push(checkbox.dataset.index); // Get the index of selected rows
        }
      });

      if (selectedIndexes.length > 0) {
        try {
          // Send an AJAX request to update the status of selected rows
          const response = await fetch('/update-wallet-status-bulk', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              indexes: selectedIndexes, // Send the selected indexes to the backend
              isRaised: true // We want to raise the status
            })
          });

          if (response.ok) {
            // Update the UI to reflect the changes
            selectedIndexes.forEach(index => {
              const rowBadge = document.querySelector(`.raised-status:nth-child(${parseInt(index) + 1})`);
              rowBadge.textContent = 'Raised';
              rowBadge.classList.remove('bg-danger');
              rowBadge.classList.add('bg-success');

              // Disable the checkbox after raising
              const rowCheckbox = document.querySelector(`.select-row[data-index='${index}']`);
              rowCheckbox.disabled = true;
              rowCheckbox.checked = false;
            });

            // Uncheck 'Select All' after raising
            selectAllCheckbox.checked = false;

            // Reload the page after the process is completed
            location.reload();
          } else {
            console.error('Failed to raise invoice for selected entries');
          }
        } catch (error) {
          console.error('Error:', error);
        }
      } else {
        alert('Please select at least one entry to raise an invoice.');
      }
    });
  });
</script>


