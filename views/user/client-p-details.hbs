<!-- Bulk Send Modal -->
<div class="modal fade" id="bulkSendModal" tabindex="-1" role="dialog" aria-labelledby="bulkSendModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="bulkSendModalLabel">Send WhatsApp Message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="bulkSendForm">
          <div class="form-group">
            <label for="message">Message</label>
            <textarea class="form-control" id="message" rows="3" placeholder="Enter your message" required></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="sendBulkMessage">Send Message</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById('sendBulkMessage').addEventListener('click', function() {
    const message = document.getElementById('message').value;

    if (message.trim() === '') {
      alert('Please enter a message');
      return;
    }

    const mobileNumbers = [];
    document.querySelectorAll('tr[data-id]').forEach(row => {
      const checkbox = row.querySelector('.select-partner');
      if (checkbox.checked) { // Only collect mobile numbers for selected rows
        const mobileNumber = row.querySelector('td:nth-child(6)').textContent.trim();
        if (mobileNumber) {
          mobileNumbers.push(mobileNumber);
        }
      }
    });

    if (mobileNumbers.length === 0) {
      alert('No mobile numbers selected');
      return;
    }

    // Send the message to selected numbers using the bulk API
    fetch('/send-bulk-message', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ message: message, numbers: mobileNumbers }),
    })
    .then(response => response.json())
    .then(result => {
      if (result.success) {
        alert('Message sent to selected numbers');
      } else {
        alert('Failed to send message');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error sending message');
    });

    // Close the modal
    $('#bulkSendModal').modal('hide');
  });
</script>



