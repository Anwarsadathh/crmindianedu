        document.getElementById('state').value = '';
        document.getElementById('city').value = '';
        document.getElementById('course').value = '';

        filterAndDisplayData('', '', '', '', '', '');
    });

    function filterAndDisplayData(leadOwner, timeStampRange, assignDateRange, state, city, course) {
        // Parse date ranges
        const timeStampDates = timeStampRange.split(' to ');
        const timeStampStartDate = timeStampDates.length > 1 ? new Date(timeStampDates[0]) : null;
        const timeStampEndDate = timeStampDates.length > 1 ? new Date(timeStampDates[1]) : null;

        const assignDateDates = assignDateRange.split(' to ');
        const assignDateStartDate = assignDateDates.length > 1 ? new Date(assignDateDates[0]) : null;
        const assignDateEndDate = assignDateDates.length > 1 ? new Date(assignDateDates[1]) : null;

        // Clear existing custom filters
        $.fn.dataTable.ext.search.pop();

        // Add custom filter
        $.fn.dataTable.ext.search.push(function(settings, data, dataIndex) {
            const rowLeadOwner = $(table.row(dataIndex).node()).find('.lead-owner-select').val().toLowerCase();
            const rowState = data[7].toLowerCase(); // Column index for State
            const rowCity = data[16].toLowerCase(); // Column index for City
            const rowCourse = data[17].toLowerCase(); // Column index for Course
            const timeStampText = data[3]; // Column index for TimeStamp
            const assignDateText = data[4]; // Column index for Assign Date
            const rowTimeStamp = new Date(timeStampText);
            const rowAssignDate = new Date(assignDateText);

            // Apply filters
            let showRow = true;

            if (leadOwner && rowLeadOwner !== leadOwner.toLowerCase()) showRow = false;
            if (state && rowState !== state) showRow = false;
            if (city && rowCity !== city) showRow = false;
            if (course && rowCourse !== course) showRow = false;
            if (timeStampStartDate && timeStampEndDate && (rowTimeStamp < timeStampStartDate || rowTimeStamp > timeStampEndDate || isNaN(rowTimeStamp))) showRow = false;
            if (assignDateStartDate && assignDateEndDate && (rowAssignDate < assignDateStartDate || rowAssignDate > assignDateEndDate || isNaN(rowAssignDate))) showRow = false;

            return showRow;
        });

        // Redraw the table to reflect changes
        table.draw();

