<script>
    let cardVisible = false;

    function openLightbox(src) {
        document.getElementById('lightbox-img').src = src;
        document.getElementById('lightbox').classList.add('active');
        document.querySelector('.card-container').style.display = 'none';  // Hide the card-container
        cardVisible = false;
    }

    function closeLightbox() {
        document.getElementById('lightbox').classList.remove('active');
        if (!cardVisible) {
            document.querySelector('.card-container').style.display = 'block';  // Show the card-container again
            cardVisible = true;
        }
    }

    document.addEventListener('scroll', function() {
        const cardContainer = document.querySelector('.card-container');
        const scrollPosition = window.scrollY || document.documentElement.scrollTop;

        if (scrollPosition > 500 && !cardVisible) { // Show card only if it is not visible
            cardContainer.classList.add('show');
            cardVisible = true;
        }
    });
</script>


