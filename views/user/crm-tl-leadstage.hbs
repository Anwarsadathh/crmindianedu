<script>
    document.querySelectorAll('.delete-lead-stage-btn').forEach(button => {
    button.addEventListener('click', async function() {
        const leadStageId = this.dataset.id;

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then(async (result) => {
            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/crm-leadstage/${leadStageId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    const result = await response.json();

                    if (result.success) {
                        Swal.fire(
                            'Deleted!',
                            'The lead stage has been deleted.',
                            'success'
                        ).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: result.message || 'An error occurred while deleting the lead stage.',
                        });
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An error occurred while deleting the lead stage.',
                    });
                }
            }
        });
    });
});

document.addEventListener('DOMContentLoaded', () => {
    const substageContainer = document.getElementById('substageContainer');
    const form = document.getElementById('createLeadStage');

    // Function to create a substage item
    function createSubstageItem(substage = {name: '', mandatory: false}) {
        const substageItem = document.createElement('div');
        substageItem.classList.add('substage-item', 'mb-3');
        substageItem.innerHTML = `
            <div class="d-flex align-items-center">
                <div class="flex-grow-1">
                    <label for="substage" class="form-label">Sub Stage</label>
                    <input type="text" class="form-control" name="substage[]" value="${substage.name}" required>
                </div>
                <button type="button" class="btn btn-success add-substage-btn btn-sm mx-2">
                    <i class="fas fa-plus-circle"></i>
                </button>
                <button type="button" class="btn btn-danger remove-substage-btn btn-sm">
                    <i class="fas fa-minus-circle"></i>
                </button>
            </div>
            <div class="form-check mt-2">
                <input class="form-check-input" type="checkbox" name="mandatory[]" value="1" ${substage.mandatory ? 'checked' : ''}>
                <label class="form-check-label">Mandatory</label>
            </div>
        `;
        return substageItem;
    }

    // Initial substage item
    substageContainer.appendChild(createSubstageItem());

    // Add event listeners for Add and Remove buttons
    substageContainer.addEventListener('click', (event) => {
        if (event.target.closest('.add-substage-btn')) {
            substageContainer.appendChild(createSubstageItem());
        } else if (event.target.closest('.remove-substage-btn')) {
            const substageItem = event.target.closest('.substage-item');
            substageItem.remove();
        }
    });

    // Handle form submission for both add and edit
    form.addEventListener('submit', async function(event) {
        event.preventDefault();

        const substageItems = document.querySelectorAll('.substage-item');
        const substages = [];

        substageItems.forEach((substageItem) => {
            const substageName = substageItem.querySelector('input[name="substage[]"]').value;
            const isMandatory = substageItem.querySelector('input[name="mandatory[]"]').checked;

            substages.push({
                name: substageName,
                mandatory: isMandatory
            });
        });

        const data = {
            stage: form.stage.value,
            substage: substages
        };

        const leadStageId = form.leadStageId.value;
        const url = leadStageId ? `/crm-leadstage/${leadStageId}` : '/crm-leadstage';
        const method = leadStageId ? 'PUT' : 'POST';

        try {
            const response = await fetch(url, {
                method: method,
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            const result = await response.json();

            if (result.success) {
                Swal.fire({
                    icon: 'success',
                    title: leadStageId ? 'Lead Stage Updated' : 'Lead Stage Created',
                    text: leadStageId ? 'The lead stage has been updated successfully!' : 'The lead stage has been created successfully!',
                }).then(() => {
                    location.reload();
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: result.message || 'An error occurred while processing the request.',
                });
            }
        } catch (error) {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'An error occurred while processing the request.',
            });
        }
    });

    // Edit button click event
    document.querySelectorAll('.edit-lead-stage-btn').forEach(button => {
        button.addEventListener('click', async function() {
            const leadStageId = this.dataset.id;
            try {
                const response = await fetch(`/crm-leadstage/${leadStageId}`);
                const leadStage = await response.json();

                if (leadStage) {
                    form.leadStageId.value = leadStage._id;
                    form.stage.value = leadStage.stage;

                    // Clear existing substage items
                    substageContainer.innerHTML = '';
                    leadStage.substage.forEach(substage => {
                        substageContainer.appendChild(createSubstageItem(substage));
                    });
                }
            } catch (error) {
                console.error('Error fetching lead stage data:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while fetching lead stage data.',
                });
            }
        });
    });
});
