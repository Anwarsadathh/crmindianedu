<script>
$(document).on('click', '.dropdown-card', function () {
  const dropdownValue = $(this).data('value'); // Get the dropdown value from the card data attribute
  const startDate = $('#startDate').val(); // Assume you have an input field for start date
  const endDate = $('#endDate').val(); // Assume you have an input field for end date

  if (dropdownValue) {
    $.ajax({
      url: `/get-details-by-dropdown/${dropdownValue}?startDate=${startDate}&endDate=${endDate}`,
      method: 'GET',
      success: function (response) {
        if (response.success) {
          const clients = response.clients;
          const $modalTableBody = $('#modalTableBody');
          $modalTableBody.empty(); // Clear existing rows

          // Populate the modal table with client data
          clients.forEach(client => {
            $modalTableBody.append(`
              <tr>
                <td class="text-danger font-weight-bold">${client.date || ''}</td>
                <td class="text-dark font-weight-bold">${client.studentid || ''}</td>
                <td>${client.name || ''}</td>
                <td>${client.course || ''}</td>
                <td class="hideable">${client.email || ''}</td>
                <td class="hideable">${client.mobile || ''}</td>
                <td class="hideable">${client.state || ''}</td>
                <td class="hideable">${client.specificName || ''}</td>
              </tr>
            `);
          });

          // Show the modal
          $('#detailsModal').modal('show');
        } else {
          console.warn('No details found for this dropdown value.');
        }
      },
      error: function (err) {
        console.error('Error fetching client details:', err);
      }
    });
  } else {
    console.error('Dropdown value is missing.');
  }
});

</script>


