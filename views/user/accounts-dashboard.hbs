<script>
document.addEventListener("DOMContentLoaded", function() {
  const dropdownCards = document.querySelectorAll('.dropdown-card');
  const startDateInput = document.getElementById('startDate');
  const endDateInput = document.getElementById('endDate');

  dropdownCards.forEach(card => {
    card.addEventListener('click', function() {
      const selectedValue = card.getAttribute('data-value');
      const startDate = startDateInput.value;
      const endDate = endDateInput.value;

      // Fetch client details based on the selected value and date range
      let query = `/get-client-details?value=${selectedValue}`;
      if (startDate) query += `&startDate=${startDate}`;
      if (endDate) query += `&endDate=${endDate}`;

      fetch(query)
        .then(response => response.json())
        .then(data => {
          // Populate the modal table
          const modalTableBody = document.getElementById('modalTableBody');
          modalTableBody.innerHTML = ''; // Clear previous data

          data.clients.forEach(client => {
            const row = `<tr>
              <td>${client.date}</td>
              <td>${client.studentid}</td>
              <td>${client.name}</td>
              <td>${client.course}</td>
              <td>${client.email}</td>
              <td>${client.mobile}</td>
              <td>${client.state}</td>
              <td>${client.specificName}</td>
            </tr>`;
            modalTableBody.innerHTML += row;
          });

          // Show the modal
          $('#detailsModal').modal('show');
        })
        .catch(error => {
          console.error('Error fetching client details:', error);
        });
    });
  });
});

</script>
