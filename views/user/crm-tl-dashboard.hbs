document.getElementById("filterBtn").addEventListener("click", function() {
  const leadOwner = document.getElementById("leadOwner").value;
  const dateRange = document.getElementById("dateRange").value;

  // Check if dateRange contains 'to' and split accordingly
  let [startDate, endDate] = dateRange.split(" to ").map(date => date.trim());

  // Debugging logs
  console.log("Selected Lead Owner:", leadOwner);
  console.log("Selected Date Range:", dateRange);
  console.log("Parsed Start Date:", startDate);
  console.log("Parsed End Date:", endDate);

  const query = new URLSearchParams({
    leadOwnerEmail: leadOwner,
    startDate: startDate,
    endDate: endDate
  }).toString();

  console.log("Query String:", query);

  window.location.href = `/crm-tl-dashboard?${query}`;
});

document.getElementById("clearBtn").addEventListener("click", function() {
  // Reset the filters
  document.getElementById("leadOwner").value = "";
  document.getElementById("dateRange").value = "";

  // Redirect to the dashboard without query parameters
  window.location.href = "/crm-tl-dashboard";
});
</script>


