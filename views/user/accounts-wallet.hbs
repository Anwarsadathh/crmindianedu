 <div class="container mt-3">
  <!-- Wallet Balance -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title"><i class="fa fa-wallet me-2"></i>Wallet Summary</h5>

      {{#each institutes}}
      <div class="row">
        <!-- Wallet Total Card -->
        <div class="col-md-6 mb-3">
          <div class="card bg-gradient-white p-3">
            <h6 class="card-title">Total IEHD</h6>
            <p id="total-raised" class="card-text">₹{{totalWalletAmount}}</p>
          </div>
        </div>

        <!-- WalletP Total Card -->
        <div class="col-md-6 mb-3">
          <div class="card bg-gradient-white p-3">
            <h6 class="card-title">Total IEHP</h6>
            <p id="total-not-raised" class="card-text">₹{{totalWalletAmountP}}</p>
          </div>
        </div>
      </div>
      {{/each}}

      <p class="text-muted">Last updated: {{formatDate currentDate}}</p>
    </div>
  </div>

  <!-- Wallet and WalletP Tables -->
  {{#each institutes}}
  <h3 >IEHD</h3>

  <!-- Wallet Table -->
  <table id="walletTable{{@index}}" class="table display">
    <thead>
      <tr>
        <th>Date</th>
        <th>Amount</th>
        <th>Student ID</th>
        <th>Name</th>
        <th>Course</th>
        <th>Email</th>
        <th>Mobile</th>
      </tr>
    </thead>
    <tbody>
      {{#each wallet}}
      <tr>
        <td>{{formatDate this.date}}</td>
        <td>₹{{this.amount}}</td>
        <td>{{this.studentDetails.studentid}}</td>
        <td>{{this.studentDetails.name}}</td>
        <td>{{this.studentDetails.course}}</td>
        <td>{{this.studentDetails.email}}</td>
        <td>{{this.studentDetails.mobile}}</td>
      </tr>
      {{else}}
      <tr>
        <td colspan="7">No transactions found in Wallet</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
<hr style="border: 2px dashed #007BFF; width: 100%; margin: 40px 0;">

  <!-- WalletP Table -->
  <h3>IEHP</h3>
  <table id="walletPTable{{@index}}" class="table display">
    <thead>
      <tr>
        <th>Date</th>
        <th>Amount</th>
        <th>Student ID</th>
        <th>Name</th>
        <th>Course</th>
        <th>Email</th>
        <th>Mobile</th>
      </tr>
    </thead>
    <tbody>
      {{#each walletP}}
      <tr>
        <td>{{formatDate this.date}}</td>
        <td>₹{{this.amount}}</td>
        <td>{{this.studentDetails.studentid}}</td>
        <td>{{this.studentDetails.name}}</td>
        <td>{{this.studentDetails.course}}</td>
        <td>{{this.studentDetails.email}}</td>
        <td>{{this.studentDetails.mobile}}</td>
      </tr>
      {{else}}
      <tr>
        <td colspan="7">No transactions found in WalletP</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  {{/each}}

  <script>
    $(document).ready(function() {
      // Initialize DataTables for each institute
      {{#each institutes}}
      $('#walletTable{{@index}}').DataTable();
      $('#walletPTable{{@index}}').DataTable();
      {{/each}}
    });
  </script>
