function redirectToSEForm(button) {
    const row = button.closest('tr');
     const name = row.querySelector('td:nth-child(6)').textContent.trim();
    const email = row.querySelector('td:nth-child(18)').textContent.trim();
    const mobile = row.querySelector('td:nth-child(8)').textContent.trim();
    const course = row.querySelector('td:nth-child(15)').textContent.trim();
    const specialization = row.querySelector('td:nth-child(26)').textContent.trim();
    const city = row.querySelector('td:nth-child(14)').textContent.trim();
    const state = row.querySelector('td:nth-child(5)').textContent.trim();

    // Construct URL with query parameters
    const url = new URL('/se-form', window.location.origin);
    url.searchParams.append('name', encodeURIComponent(name));
    url.searchParams.append('email', encodeURIComponent(email));
    url.searchParams.append('mobile', encodeURIComponent(mobile));
    url.searchParams.append('course', encodeURIComponent(course));
    url.searchParams.append('specialization', encodeURIComponent(specialization));
    url.searchParams.append('city', encodeURIComponent(city)); // Add city
    url.searchParams.append('state', encodeURIComponent(state)); // Add state

    // Redirect to SE Form page
    window.location.href = url.toString();
}
</script>

<script>
async function updateLeadStatus(select) {
    const row = select.closest('tr');
    const leadStatusTextarea = row.querySelector('.lead-status-textarea');
    const leadStage = select.value;
    const id = row.querySelector('.font-weight-bold').dataset.id; // Use dataset attribute

    if (leadStage) {
        try {
            const response = await fetch('/get-lead-status', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ id, leadStage })
            });

            const result = await response.json();

            console.log('Fetch result:', result); // Log the fetch result for debugging

            if (result.success) {
                if (result.status && result.status.trim() !== '' && result.status !== 'No Status') {
                    console.log('Status found:', result.status); // Log status for debugging
                    leadStatusTextarea.value = result.status;
                    leadStatusTextarea.disabled = true; // Disable if valid status is found
                } else {
                    console.log('No valid status found'); // Log when no valid status is found
                    leadStatusTextarea.value = 'No Status';
                    leadStatusTextarea.disabled = false; // Enable if no valid status is found
                }
            } else {
                console.log('Fetch failed:', result.message); // Log failure message for debugging
                leadStatusTextarea.value = 'No Status';
                leadStatusTextarea.disabled = false; // Enable if fetch fails
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: result.message || 'Failed to fetch lead status.',
                });
            }
        } catch (error) {
            console.error('Error:', error); // Log the error for debugging
            leadStatusTextarea.value = 'No Status';
            leadStatusTextarea.disabled = false; // Enable if an error occurs
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'An error occurred while fetching the lead status.',
            });
        }
    } else {
        console.log('No lead stage selected'); // Log when no lead stage is selected
        leadStatusTextarea.value = 'No Status';
        leadStatusTextarea.disabled = false; // Enable if no lead stage is selected
    }
}



async function saveLeadStatus(button) {
    const row = button.closest('tr');
    const id = row.querySelector('.font-weight-bold').textContent.trim();
    const leadStageSelect = row.querySelector('.lead-stage-select');
    const leadStatusTextarea = row.querySelector('.lead-status-textarea');
    const leadStage = leadStageSelect.value;
    const leadStatus = leadStatusTextarea.value;
    const isSaved = leadStatus ? "saved" : null;

    console.log("ID:", id); // Debugging output
    console.log("Lead Stage:", leadStage); // Debugging output
    console.log("Lead Status:", leadStatus); // Debugging output
    console.log("Is Saved:", isSaved); // Debugging output

    try {
        const response = await fetch('/update-lead-status', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ id, leadStage, leadStatus, isSaved })
        });

        const result = await response.json();

        if (result.success) {
            Swal.fire({
                icon: 'success',
                title: 'Saved',
                text: 'Lead status has been updated successfully!',
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: result.message || 'An error occurred while updating the lead status.',
            });
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'An error occurred while updating the lead status.',
        });
    }
}


