<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <!-- Unique Date Range Filter and Button -->
        <div class="col-12 col-md-12 d-flex">
            <div class="filter-card glassmorphism p-4 shadow-lg d-flex">
                <div class="floating-label-wrapper">
                    <label for="dateRange" class="floating-label">Date Range</label>
                    <input type="text" id="dateRange" class="form-control shadow-sm circular-input" placeholder="Select Date Range">
                </div>
                <button class="btn btn-glass shadow-sm circular-btn ms-3" id="filterBtn">
                    <i class="bi bi-filter-circle"></i> Filter
                </button>
                <button class="btn btn-glass shadow-sm circular-btn ms-3" id="latestBtn">
                    <i class="bi bi-clock-history"></i> Show Latest Substage
                </button>
            </div>
        </div>

        <!-- Lead Statistics -->
        <div class="col-6 col-xl-3">
            <div class="stat-card bg-gradient-primary text-white rounded d-flex align-items-center justify-content-between p-4 shadow-xl">
                <i class="fa fa-chart-line fa-3x neon-icon"></i>
                <div class="ms-3">
                    <p class="mb-2 counts">Total Leads</p>
                    <h6 class="mb-0">{{totalLeads}}</h6>
                </div>
            </div>
        </div>

        <!-- Main Stage Cards -->
        {{#each mainStageCounts}}
            <div class="col-6 col-xl-3">
                <div class="stat-card bg-gradient-neon text-white rounded d-flex align-items-center justify-content-between p-4 shadow-xl main-stage-card" data-stage="{{mainStage}}">
                    <i class="fa fa-briefcase fa-3x neon-icon"></i>
                    <div class="ms-3">
                        <p class="mb-2 counts">Main Stage: {{mainStage}}</p>
                        <h6 class="mb-0">{{count}}</h6>
                    </div>
                </div>
            </div>
        {{/each}}

        <!-- Stage Cards -->
        {{#each stageCounts}}
            <div class="col-6 col-xl-3">
                <div class="stat-card bg-gradient-info text-white rounded d-flex align-items-center justify-content-between p-4 shadow-xl stage-card" data-stage="{{stage}}" data-main-stage="{{mainStage}}">
                    <i class="fa fa-layer-group fa-3x neon-icon"></i>
                    <div class="ms-3">
                        <p class="mb-2 counts">Stage: {{stage}}</p>
                        <h6 class="mb-0">{{count}}</h6>
                    </div>
                </div>
            </div>
        {{/each}}

        <!-- Sub-Stage Cards -->
        {{#each subStageCounts}}
            <div class="col-6 col-xl-3">
                <div class="stat-card bg-gradient-success text-white rounded d-flex align-items-center justify-content-between p-4 shadow-xl sub-stage-card" data-sub-stage="{{subStage}}" data-stage="{{stage}}" data-main-stage="{{mainStage}}">
                    <i class="fa fa-tags fa-3x neon-icon"></i>
                    <div class="ms-3">
                        <p class="mb-2 counts">Sub-Stage: {{subStage}}</p>
                        <h6 class="mb-0">{{count}}</h6>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<script>
    document.getElementById('filterBtn').addEventListener('click', function() {
        const dateRange = document.getElementById('dateRange').value;
        const [startDate, endDate] = dateRange.split(' to ');
        const url = `/crm-lead-owner-dashboard?startDate=${startDate}&endDate=${endDate}`;
        window.location.href = url;
    });

    document.getElementById('latestBtn').addEventListener('click', function() {
        const dateRange = document.getElementById('dateRange').value;
        const [startDate, endDate] = dateRange.split(' to ');
        const url = `/crm-lead-owner-dashboard?startDate=${startDate}&endDate=${endDate}&showLatestSubstage=true`;
        window.location.href = url;
    });

    // Add event listener for each card to show more details on click
    document.querySelectorAll('.stat-card').forEach(function(card) {
        card.addEventListener('click', function() {
            const mainStage = this.dataset.mainStage || '';
            const stage = this.dataset.stage || '';
            const subStage = this.dataset.subStage || '';
            
            alert(`Main Stage: ${mainStage}\nStage: ${stage}\nSub-Stage: ${subStage}`);
        });
    });
</script>

       
     
